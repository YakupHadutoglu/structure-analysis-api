{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": ".",
        "outDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "src",
        "paths": {
            "@controllers/*": ["modules/controllers/*"],
            "@middlewares/*": ["modules/middlewares/*"],
            "@models/*": ["modules/models/*"],
            "@routes/*": ["modules/routes/*"],
            "@services/*": ["modules/services/*"],
            "@types": ["modules/types/*"]
        }
    },
    "include": ["src/**/*.ts", "server.ts", "src/modules/analyzer/analyzer.service.ts", "src/modules/analyzer/analyzer.routes.ts", "src/modules/analyzer/analyzer.controller.ts"],
    "exclude": ["node_modules" , "dist" , "test"]
}
